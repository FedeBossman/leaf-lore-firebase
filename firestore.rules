service cloud.firestore {
  match /databases/{database}/documents {
    match /chats/{id} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
    match /homePageInfo/{id} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    match /tips/{id} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    match /plants/{id} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
  }
  }
}
